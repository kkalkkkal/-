<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.end_project">
    <uses-permission android:name="android.permission.CAMERA" android:maxSdkVersion="29" /> <!-- 카메라 권한 요청 선언 -->
    <uses-permission android:name="android.permission.CALL_PHONE" android:maxSdkVersion="29" /> <!-- 전화 권한 요청 선언 -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" android:maxSdkVersion="29" /> <!-- 녹음(마이크) 권한 요청 선언 -->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.End_Project">
        <activity android:name=".MainActivity">
            <intent-filter> <!--이 필터가 있는 부분이 가장 먼저 실행됨-->
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>